<?xml version="1.0"?>
<config>
	<sections>
		<comingsoon translate="label comment">
			<label>Store Maintenance</label>
			<tab>advanced</tab>
			<frontend_type>text</frontend_type>
			<sort_order>998</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<hint>
				  <frontend_model>wsu_comingsoon/adminhtml_system_config_fieldset_hint</frontend_model>
				  <sort_order>0</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
				</hint>
				<coming translate="label comment">
					<label>Coming Soon Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Show Coming Soon Message?</label>
							<comment>enable or disable Coming Soon Message</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<allowFrontendForAdmins translate="label comment">
							<label>Frontend Access for Admins?</label>
							<comment>logged in admins bypass Cooming soon page?</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</allowFrontendForAdmins>
						<allowedIPs translate="label comment">
							<label>Allowed IPs</label>
							<comment>IPs that bypass Cooming soon page</comment>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</allowedIPs>
						<logVerbosity translate="label comment">
							<label>Log Verbosity</label>
							<frontend_type>select</frontend_type>
							<source_model>wsu_comingsoon/adminhtml_system_config_source_logging</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</logVerbosity>
						<logFile translate="label comment">
							<label>Logfile</label>
							<comment><![CDATA[log file to log access while maintenance mode<br />(default: maintenance.log)]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</logFile>
					</fields>
				</coming>
				<maintenance translate="label comment">
					<label>Maintenance Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Store Maintenance?</label>
							<comment>enable or disable Store Maintenance</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<allowFrontendForAdmins translate="label comment">
							<label>Frontend Access for Admins?</label>
							<comment>logged in admins bypass Store Maintenance?</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</allowFrontendForAdmins>
						<allowedIPs translate="label comment">
							<label>Allowed IPs</label>
							<comment>IPs that bypass Store Maintenance</comment>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</allowedIPs>
						<logVerbosity translate="label comment">
							<label>Log Verbosity</label>
							<frontend_type>select</frontend_type>
							<source_model>wsu_comingsoon/adminhtml_system_config_source_logging</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</logVerbosity>
						<logFile translate="label comment">
							<label>Logfile</label>
							<comment><![CDATA[log file to log access while maintenance mode<br />(default: maintenance.log)]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>1</show_in_store>
						</logFile>
					</fields>
				</maintenance>
			</groups>
		</comingsoon>
	</sections>
</config>
